package constructor;

public class AddIntNumbers {
	int numOne;
	int numTwo;
	
	public AddIntNumbers(int numberOne, int numberTwo) {
		numOne = numberOne;//10
		numTwo = numberTwo;//20	
	}
									//	100				200
	public void addTwoIntNumbers(int numberOne, int numberTwo) {	
		int sum = numOne + numTwo;
		System.out.println(sum);
	}
	
	public void addThreeIntNumbers(int numberThree) {
		int sum = numOne + numTwo +numberThree;
		System.out.println(sum);
	}
	
	public void addFourIntNumbers(int numberThree, int numberFour) {
		int sum = numOne + numTwo +numberThree +numberFour;
		System.out.println(sum);
	}

}
