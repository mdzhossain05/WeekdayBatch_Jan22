package constructor;

public class AddIntNumbers {
	int numOne;
	int numTwo;
	
	public void addTwoIntNumbers(int numberOne, int numberTwo) {
		numOne = numberOne;
		numTwo = numberTwo;	
		int sum = numOne + numTwo;
		System.out.println(sum);
	}
	
	public void addThreeIntNumbers(int numberOne, int numberTwo, int numberThree) {
		int sum = numberOne+numberTwo+numberThree;
		System.out.println(sum);
	}
	

}
