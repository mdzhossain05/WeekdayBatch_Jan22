package testScript;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import pageObjects.LoginPage;

public class LoginScript {

	public static void main(String[] args) {
		System.setProperty("webdriver.chrome.driver", "C:\\Users\\zakir\\Downloads\\chromedriver_win32 (1)\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.get("https://www.saucedemo.com/");
		LoginPage lp = new LoginPage();
		
		lp.usernameTextbox(driver).sendKeys("standard_user");
		lp.passwordTextbox(driver).sendKeys("secret_sauce");
		lp.signinButton(driver).click();
		
		driver.navigate().back();
		lp.usernameTextbox(driver).sendKeys("locked_out_user");
		lp.passwordTextbox(driver).sendKeys("secret_sauce");
		lp.signinButton(driver).click();
		
//		driver.navigate().refresh();
		lp.usernameTextbox(driver).clear();
		lp.usernameTextbox(driver).sendKeys("problem_user");
		lp.passwordTextbox(driver).clear();
		lp.passwordTextbox(driver).sendKeys("secret_sauce");
		lp.signinButton(driver).click();
		
		driver.navigate().back();
		lp.usernameTextbox(driver).sendKeys("performance_glitch_user");
		lp.passwordTextbox(driver).sendKeys("secret_sauce");
		lp.signinButton(driver).click();
	}

}
